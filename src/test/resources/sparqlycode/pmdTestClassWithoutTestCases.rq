# Finds all classes ending with the suffix 'Test' that aren't annotated with @Test
# Adam Nogradi, Interition Ltd.
# Modified: paul Worrall, Interition Ltd
# Modified so test returns false. Put filters together as they always happen at the end anyway in query execution

PREFIX java: <http://www.interition.net/java/ref/>
PREFIX subject: <http://www.interition.net/sparqlycode/id/net/interition/sparqlycode/pmdtestsuite/>
PREFIX rdfs: <http://www.w3.org/2000/01/rdf-schema#>

ASK WHERE {

		subject:TestClassWithoutTestCasesTest rdfs:label ?className ;
			java:method ?method .
		
		FILTER (STRENDS(STR(?className), "Test"))
		FILTER EXISTS {
			?method java:hasAnnotation <http://www.interition.net/sparqlycode/id/org/junit/Test>
		}
		
}

